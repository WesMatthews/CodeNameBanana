                <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Label Content="Monday End" Margin="2"/>
                    <StackPanel Margin="2">
                        <Label Content="Hour"/>
                        <ComboBox Name="cbEmpAvailMondayEndHr" />
                    </StackPanel>
                    <StackPanel Margin="2">

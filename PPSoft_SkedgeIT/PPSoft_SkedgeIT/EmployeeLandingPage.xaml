                    </StackPanel>
                </StackPanel>
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Label Content="Tuesday Start" Margin="2"/>
                    <StackPanel Margin="2">
                        <Label Content="Hour"/>
                        <ComboBox Name="cbEmpAvailTuesStartHr"/>
